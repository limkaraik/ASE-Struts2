<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
    
<struts>
	<constant name="struts.devMode" value="true" />
	
	<package name="ase-2" extends="struts-default">
		<action name="login" class="com.controller.UserAction" method="login">
			<result name="success">/success.jsp</result>
			<result name="input">/index.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
		<action name="register" class="com.controller.UserAction" method="register">
			<result name="success">/success.jsp</result>
			<result name="input">/register.jsp</result>
			<result name="error">/register.jsp</result>
		</action>
		<action name="goToRegister" class="com.controller.UserAction" method="Redirect">
			<result name="success">/register.jsp</result>
		</action>
		<action name="goToLogin" class="com.controller.UserAction" method="Redirect">
			<result name="success">/index.jsp</result>
		</action>
		<action name="logout" class="com.controller.UserAction" method="Redirect">
			<result name="success">/index.jsp</result>
		</action>
	</package>

</struts>